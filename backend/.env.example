# Server
PORT=3000
NODE_ENV=development

# Database Configuration
# DB_TYPE: 資料庫類型 (postgres | rofl)
DB_TYPE=postgres

# PostgreSQL Configuration (當 DB_TYPE=postgres)
DB_HOST=localhost
DB_PORT=5432
DB_NAME=invoice_rwa
DB_USER=postgres
DB_PASSWORD=your_password
DB_POOL_MAX=20
DB_IDLE_TIMEOUT=30000
DB_CONNECTION_TIMEOUT=2000

# ROFL Configuration (當 DB_TYPE=rofl)
# ROFL_ENDPOINT=your-rofl-endpoint
# ROFL_NODE_ID=your-node-id

# Blockchain - 改成 Zircuit
ZIRCUIT_RPC_URL=https://zircuit1-mainnet.p2pify.com
ZIRCUIT_TESTNET_RPC_URL=https://zircuit1-testnet.p2pify.com
CHAIN_ID=48900  # Zircuit Mainnet
# CHAIN_ID=48899  # Zircuit Testnet

# Contracts
INVOICE_TOKEN_ADDRESS=0x...
POOL_ADDRESS=0x...

# Relayer
RELAYER_PRIVATE_KEY=0x...
RELAYER_ADDRESS=0x...

# Oracle
ORACLE_PRIVATE_KEY=0x...
ORACLE_ADDRESS=0x...

# Government API
GOV_INVOICE_API_URL=https://api.einvoice.nat.gov.tw
GOV_API_KEY=your_api_key

# Monitoring
ALERT_WEBHOOK_URL=https://hooks.slack.com/...
MIN_RELAYER_BALANCE=0.1  # 注意：Zircuit 原生代幣可能不同